[user]
    name = Kay Zhu
    email = me@kayzhu.com

[core]
    excludesfile = ~/.gitignore_global
    editor = vim
    pager = less -R

[difftool "sourcetree"]
	cmd = /Applications/DiffMerge.app/Contents/MacOS/DiffMerge --nosplash \"$LOCAL\" \"$REMOTE\"
	path = 

[mergetool "sourcetree"]
	cmd = /Applications/DiffMerge.app/Contents/MacOS/DiffMerge --merge --result=\"$MERGED\" \"$LOCAL\" \"$BASE\" \"$REMOTE\"
	trustExitCode = true

[mergetool "diffmerge"]
    cmd = diffmerge --merge --result=$MERGED $LOCAL $BASE $REMOTE
    trustExitCode = false

[alias]
    # https://gist.github.com/2051932
    # I'm lazy, so two letters will always trump the full command
    co = checkout
    ci = commit
    cp = cherry-pick
    st = status
    br = branch
    df = diff
    lg = log -p

    # Show the log, with the diff +'s and -'s
    lc = log ORIG_HEAD.. --stat --no-merges datetag = "tag `date '+%Y%m%d%H%M'`"

    # The first thing I run on a new project. Who has done the most damage
    who = shortlog -s --

[color]
    diff = auto
    status = auto
    branch = auto
    ui = auto

[difftool "Kaleidoscope"]
    cmd = ksdiff-wrapper git \"$LOCAL\" \"$REMOTE\"

[github]
    user = kayzhu
[filter "lfs"]
	smudge = git-lfs smudge -- %f
	process = git-lfs filter-process
	required = true
	clean = git-lfs clean -- %f
